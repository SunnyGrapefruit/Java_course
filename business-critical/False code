1
adress1 = find_element_by_name("adress1")
adress2 = find_element_by_name("adress2")
phone = find_element_by_name("phone")
order = find_element_by_name("order")


void adress1{
    adress1.send_keys("")
    order.click()
    if get.message("Некорректный адрес"):
        return("good")
    adress1.send_keys("Ленина 24")
    adress2.send_keys("")
    order.click()
    if get.message("Некорректный телефон"):
        return("good")
    phone.send_keys("+78945612310")
    order.click()
}

void adress(arg){
    adress1.send_keys(arg)
    order.click()
    if get.message("Укажите адрес") && arg is null:
        return("test passed")
    elif get.message("Корректный адрес") && arg is null:
        return("test failed")
    elif get.message("Корректный адрес") && arg is not null:
        return("test passed")
}

void phone(arg){
    phone.send_keys(arg)
    order.click()
    if get.message("Некорректный телефон") && (arg is null || arg != mask):
        return("test passed")
    elif get.message("Корректный телефон") && (arg is null || arg != mask):
        return("test failed")
    elif get.message("Корректный телефон") && (arg is not null || arg == mask):
        return("test passed")
}


void confirm(arg){
    timeouts(30)
    code = find_element_by_name("code")
    code.send_keys("123")
    confirm = find_element_by_name("confirm")
    confirm.click()
    if get.message("Заказ принят"):
        return("good")
}

void cancel{
    code = find_element_by_name("code")
    code.send_keys("123")
    cancel = find_element_by_name("cancel")
    cancel.click()
    if get.message("Заказ принят"):
        return("good")
}
