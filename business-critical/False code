void adress_first(arg){
    adress1 = find_element_by_name("adress1")
    order = find_element_by_name("order")
    adress1.send_keys(arg)
    order.click()
    if get.message("Укажите адрес") && arg is null:
        return("test passed")
    elif get.message("Корректный адрес") && arg is null:
        return("test failed")
    elif get.message("Корректный адрес") && arg is not null:
        return("test correct")
}

void adress_second(arg){
    adress2 = find_element_by_name("adress2")
    order = find_element_by_name("order")
    adress2.send_keys(arg)
    order.click()
    if get.message("Корректный адрес") && arg is not null && adress_first(arg) != "test passed":
        return("test failed")
    elif get.message("Корректный адрес") && arg is not null && adress_first(arg) == "test passed":
        return("test correct")
}

void phone(arg){
    phone = find_element_by_name("phone")
    phone.send_keys(arg)
    order = find_element_by_name("order")
    order.click()
    if get.message("Некорректный телефон") && (arg is null || arg != mask):
        return("test passed")
    elif get.message("Корректный телефон") && (arg is null || arg != mask):
        return("test failed")
    elif get.message("Корректный телефон") && arg == mask):
        return("test correct")
}


void confirm(arg){
    timeouts(30)
    code = find_element_by_name("code")
    code.send_keys(arg)
    confirm = find_element_by_name("confirm")
    confirm.click()
    if get.message("Неверный код") && (arg is null || arg != mask):
            return("test passed")
        elif get.message("Заказ принят") && (arg is null || arg != mask):
            return("test failed")
        elif get.message("Заказ принят") && arg == mask:
            return("test correct")
}

void cancel{
    cancel = find_element_by_name("cancel")
    cancel.click()
    if get.message("Заказ отменен"):
        return("test correct")
    else:
        return("test failed")
}
